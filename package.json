{
  "name": "markdown-reader",
  "version": "1.2.1",
  "description": "Offline, read-only Markdown reader built with Electron, with theme menu and build script",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --mac --win --linux",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "publish": "set -a && source .env && set +a && electron-builder --mac --win --linux --publish=always",
    "publish:mac": "set -a && source .env && set +a && electron-builder --mac --publish=always",
    "publish:win": "set -a && source .env && set +a && electron-builder --win --publish=always",
    "publish:linux": "set -a && source .env && set +a && electron-builder --linux --publish=always",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "build": {
    "appId": "com.yourname.markdown-reader",
    "productName": "Markdown Reader",
    "icon": "icon.png",
    "directories": {
      "output": "dist"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "urlund",
        "repo": "markdown-reader"
      }
    ],
    "files": [
      "main.js",
      "preload.js",
      "package.json",
      "renderer/**/*",
      "node_modules/marked/**/*",
      "node_modules/electron/**/*"
    ],
    "fileAssociations": [
      {
        "ext": "md",
        "name": "Markdown Document",
        "description": "Markdown Document",
        "mimeType": "text/markdown",
        "role": "Editor"
      },
      {
        "ext": "markdown",
        "name": "Markdown Document",
        "description": "Markdown Document",
        "mimeType": "text/markdown",
        "role": "Editor"
      }
    ],
    "protocols": [
      {
        "name": "markdown-reader",
        "schemes": [
          "markdown-reader"
        ]
      }
    ],
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": "x64"
        },
        {
          "target": "dmg",
          "arch": "arm64"
        }
      ],
      "category": "public.app-category.productivity",
      "extendInfo": {
        "CFBundleDocumentTypes": [
          {
            "CFBundleTypeName": "Markdown Document",
            "CFBundleTypeExtensions": [
              "md",
              "markdown"
            ],
            "CFBundleTypeRole": "Editor",
            "LSHandlerRank": "Owner",
            "LSItemContentTypes": [
              "net.daringfireball.markdown"
            ]
          }
        ]
      }
    },
    "linux": {
      "target": "AppImage",
      "mimeTypes": [
        "text/markdown",
        "text/x-markdown"
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ],
      "fileAssociations": [
        {
          "ext": "md",
          "name": "Markdown Document",
          "description": "Markdown Document"
        },
        {
          "ext": "markdown",
          "name": "Markdown Document",
          "description": "Markdown Document"
        }
      ]
    },
    "compression": "maximum",
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "dependencies": {
    "electron-updater": "^6.6.2",
    "lucide": "^0.544.0",
    "marked": "^12.0.0",
    "prismjs": "^1.30.0"
  },
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^26.0.12",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsdom": "^27.0.0"
  }
}
